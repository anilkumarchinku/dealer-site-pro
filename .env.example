# ===================================
# PHASE 2 & 3: RAZORPAY (PAYMENTS)
# ===================================
# Required for PRO and PREMIUM tier subscriptions
# Get these from: https://dashboard.razorpay.com/app/keys

# PUBLIC KEY (used in frontend)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx

# SECRET KEY (used in backend)
RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here

# SUBSCRIPTION PLAN IDs
# Create plans at: https://dashboard.razorpay.com/app/subscriptions/plans
RAZORPAY_PRO_PLAN_ID=plan_xxxxxxxxxxxxx     # ₹499/month
RAZORPAY_PREMIUM_PLAN_ID=plan_xxxxxxxxxxxxx  # ₹999/month


# ===================================
# PHASE 2: VERCEL (CUSTOM DOMAINS)
# ===================================
# Required for custom domain SSL provisioning
# Get these from: https://vercel.com/account/tokens

VERCEL_TOKEN=your_vercel_token_here
VERCEL_PROJECT_ID=your_project_id_here


# ===================================  
# PHASE 3: CLOUDFLARE (MANAGED DOMAINS)
# ===================================
# Required for domain purchase and DNS management
# Get these from: https://dash.cloudflare.com/profile/api-tokens

CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here


# ===================================
# PHASE 4: EMAIL (OPTIONAL)
# ===================================
# For sending domain verification and notification emails

RESEND_API_KEY=re_xxxxxxxxxxxxx


# ===================================
# CRON JOB SECURITY
# ===================================
# Secret token to secure cron endpoints
# Generate a random string for this

CRON_SECRET=your_random_secret_here_change_this
